<%- include('../login/dashboard.ejs') %>

<h1 class="display-4">Users</h1>

<%if(msg){%>
    <%if(msg=='User eliminado'){%>
        <div class="alert alert-success" role="alert">
            <h3><%- msg%></h3>
          </div>
    <%}%>
<%}%>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>FullName</th>
            <th>Password</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% json.forEach(function(user){ %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.fullName %></td>
                <td><%= user.password %></td>
                <td><%= user.emailAddress %></td>
                <td>
                    <form id="formulario" action="/users/update" method="POST" >

                        <input type="hidden" name="id" value="<%= user.id %>">
                        <input type="hidden" name="fullName" value="<%= user.fullName %>">
                        <input type="hidden" name="password" value="<%= user.password %>">
                        <input type="hidden" name="emailAddress" value="<%= user.emailAddress %>">
                        <input type="submit" class="btn btn-primary" value="Edit">
                        

                    </form>
                   
                    <form id="formulario" action="/users/delete" method="POST">
                        <input type="hidden" name="id" value="<%= user.id %>">
                        <input type="submit" value="Delete" class="btn btn-danger">
                    </form>
                </td>
              

              
            </tr>
        <% }) %>
    </tbody>
</table>





