<%- include('../login/dashboard.ejs') %>

<ol class="breadcrumb">
</ol>


<h1 class="display-4">Add Usuario</h1>

<%if(msg){%>
    <%if(msg=='Usuario creado'){%>
        <div class="alert alert-success" role="alert">
            <h3><%- msg%></h3>
          </div>
    <%}else{%>
        <div class="alert alert-danger" role="alert">
            <h3><%- msg%></h3>
        </div>
    <%}%>
<%}%>


<form method="post" action="/users/add">
    <div class="form-group">
        <label for="title">FullName</label>
        <input type="text" name="fullName" class="form-control"  required></input>
    </div>
    <div class="form-group">
        <label for="title">Password</label>
        <input type="text" name="password" class="form-control" pattern=".{6,}" type="password" required></input>
    </div>
    <div class="form-group">
        <label for="body">Email</label>
        <input name="emailAddress" class="form-control" type="email" pattern="^\s*\S*\s*$" required></input>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>

