<form method="post" action="/users/add">
    <div class="form-group">
        <label for="title">Email</label>
        <input name="email" class="form-control" type="email" pattern="^\s*\S*\s*$" required></input>
    </div>
    <div class="form-group">
        <label for="title">Contrase√±a</label>
        <input name="password" class="form-control" type="password" pattern=".{6,}"  required></input>
    </div>
    <div class="form-group">
        <label for="title">Nombre</label>
        <input type="text" name="nombre" class="form-control" required></input>
    </div>
    <div class="form-group">
        <label for="title">Apellidos</label>
        <input type="text" name="appellidos" class="form-control" required></input>
    </div>
    <div class="form-group">
        <label for="title">Direccion</label>
        <input type="text" name="direccion" class="form-control" required></input>
    </div>
    <div class="form-group">
        <label for="title">Codigo postal</label>
        <input type="number" name="codPostal" class="form-control" pattern=".{6,6}" required></input>
    </div>
    <div class="form-group">
        <label for="title">Telefono</label>
        <input type="number" name="telefono" class="form-control" pattern=".{9,9}" required></input>
    </div>
    <div class="form-group">
        <label for="title">Tipo de documento</label>
        <input type="text" name="tipoDocumento" class="form-control" pattern=".{3,3}" required></input>
    </div>
    <div class="form-group">
        <label for="title">Numero de documento</label>
        <input type="text" name="numDocumento" class="form-control" pattern=".{9,9}" required></input>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary">
</form>

